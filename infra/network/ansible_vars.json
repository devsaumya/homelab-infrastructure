    {
      "from": "dmz",
      "to": "trusted",
      "action": "deny"
    },
    {
      "from": "dmz",
      "to": "iot",
      "action": "deny"
    },
    {
      "from": "dmz",
      "to": "internet",
      "action": "allow"
    },
    {
      "from": "guest",
      "to": "*",
      "action": "deny"
    },
    {
      "from": "guest",
      "to": "internet",
