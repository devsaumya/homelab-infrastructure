# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git

cloudflare_api_token = "your-cloudflare-api-token-here"
cloudflare_zone_id   = "your-zone-id-here"
cloudflare_account_id = "your-account-id-here"

# Domain configuration
internal_domain = "home.internal"  # Internal DNS zone for LAN-only services
public_domain   = "connect2home.online"  # Public domain for internet-facing services

# Services that should be exposed publicly via Cloudflare Tunnel
# These will be accessible at https://<service>.connect2home.online
public_services = [
  "grafana",
  "home"  # Traefik dashboard
]

# Legacy services map (kept for backward compatibility if needed)
# Note: DNS records are now managed via ExternalDNS in Kubernetes
services = {}

